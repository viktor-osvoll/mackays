{% extends "layout/base.twig" %}

{% block content %}
    <div class="template-page">
        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
            <section class="article-content">
                <div class="article-title">
                    <h1>{{post.title}}</h1>
                </div>
                <div class="article-body">
                    {{post.content}}
                </div>
            </section>
        </article>
    </div>
{% endblock %}
