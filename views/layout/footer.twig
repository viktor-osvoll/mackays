
    <div class="footer-content">
    {% for field in fields.flexible_content %}
        <p class="footer-top">{{ field.company }}</p>
        <p>{{ field.adress }}</p>
        <p>{{ field.telephone_number }}</p>
        <p>{{ field.email }}</p>
        {% if (field.email) %}
        <a href="{{ field.facebook_link }}" class="fa fa-facebook-square facebook" aria-hidden="true"></a>
        <a href="{{ field.instagram_link }}" class="fab fa-instagram instagram" aria-hidden="true"></a>
        {% endif %}
    {% endfor %}
     
</div>

