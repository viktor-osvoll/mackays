{% block products %}

<div class="product-block">
    <h2 class="product-headline">PRODUKTER</h2>
        <div class="row">
                
            {% for post in products %}
               
                <div class="col-lg-4 col-md-6 col-sm-12 product-content">
                   {#  <a href="{{ post.link }}" class="product-link"> #}
                        {% if (post.product_image) %}
                            <img src="{{ Image(post.product_image) }}" class="product-image">
                        {% endif %}
                        <div class="product-text-content">
                            <h1 class="product-title"><b>{{ post.product_title }}</b></h1>
                             {# </a> #}


<a class="collapsed product-collapse" data-toggle="collapse" href="#collapseExample{{post.id}}" aria-expanded="false" aria-controls="collapseExample"><i class="fas fa-plus-circle fa-3x"></i></a>

  
<div class="collapse" id="collapseExample{{post.id}}">
  <div class="collapse-info">
    <p class="collapse-p"><span class="collapse-hard">Tillverkningsland:</span><span class="span-acf"> {{ post.product_origin }}</span></p>
    <p class="collapse-p"><span class="collapse-hard">FÃ¶rpackningsstorlek:</span><span class="span-acf"> {{ post.product_size }}</span></p>
    <p class="collapse-p"><span class="collapse-hard">Ingredienser:</span>
        {# {% for ingredient in post.meta('product_ingredients') %} #}
           <span class="collapse-ingredients">{{ post.product_ingredients }}</span>
        {# {% endfor %} #}
    </p>
  </div>
</div>

                            
                        </div>
                   
                </div>
            {% endfor %}                     

        

        </div>
</div>
{% endblock %}

<script>
   $('.product-collapse').click(function(){
    $(this).find('i').toggleClass(' fa-3x fas fa-plus-circle fas fa-3x fa-minus-circle')
});

</script>