{% block slider %}
<div id="carouselExampleControls" class="carousel slide slider-container" data-ride="carousel">
  <div class="carousel-inner">
        {% for field in fields.flexible_content %}
          {% if (field.image_1) %}
           

        <div class="carousel-item active">
            <img src="{{ Image(field.image_1) }}" class="d-block w-100 slider-item" alt="...">
        </div>
        <div class="carousel-item">
            <img src="{{ Image(field.image_2) }}" class="d-block w-100 slider-item" alt="...">
        </div>
        <div class="carousel-item">
            <img src="{{ Image(field.image_3) }}" class="d-block w-100 slider-item" alt="...">
        </div>
                
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

          {% endif %}
        {% endfor %}
    </div>
</div>
</div>
{% endblock %}